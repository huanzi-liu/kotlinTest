<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints,SmallSp"
    android:paddingBottom="24dp"
    android:background="#00000000"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLabelImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="126dp"
        android:layout_height="136dp"
        android:src="@mipmap/primary_home_read" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLabelName"
        app:layout_constraintBottom_toBottomOf="@+id/ivLabelImg"
        app:layout_constraintEnd_toEndOf="@+id/ivLabelImg"
        app:layout_constraintStart_toStartOf="@+id/ivLabelImg"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/icon_primary_home_read" />

</androidx.constraintlayout.widget.ConstraintLayout>